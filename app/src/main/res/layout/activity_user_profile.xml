<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <Spinner
        android:id="@+id/spCurrency"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="Balance"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/spCurrency"
        app:layout_constraintLeft_toRightOf="@+id/spCurrency"

        />

    <TextView
        android:id="@+id/tvFeeText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:text="Komisinis mokestis"
        android:textSize="20sp"
        android:gravity="center"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCurrency" />

    <TextView
        android:id="@+id/tvFee"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="0.00"
        android:textSize="30sp"
        android:gravity="center"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFeeText"
        app:layout_constraintLeft_toRightOf="@+id/tvFeeText" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFeeText" />

    <Spinner
        android:id="@+id/spExchange"
        android:layout_width="80dp"
        android:layout_height="50dp"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/etAmount"
        app:layout_constraintLeft_toRightOf="@+id/etAmount" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:text="Submit"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/etAmount"
        app:layout_constraintLeft_toRightOf="@+id/spExchange" />


</android.support.constraint.ConstraintLayout>